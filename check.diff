+void
+getcmd(int i, char *button)
+{
+	if (!selmon->showbar)
+		return;
+
+	if (execlock & 1 << i) { /* block is already running */
+		//fprintf(stderr, "dwm: ignoring block %d, command %s\n", i, blocks[i].command);
+		return;
+	}
+
