+		execlp("/bin/sh", "sh", "-c", blocks[i].command, (char *) NULL);
+		fprintf(stderr, "dwm: block %d, execlp %s", i, blocks[i].command);
+		perror(" failed");
+		exit(EXIT_SUCCESS);
+	}
